#include <stdio.h>

int calculateFuel(int fuel, int consumption, int recharge, int solarBonus, int planet, int totalPlanets) {
    if (fuel <= 0) {
        printf("Planet %d: Fuel Remaining = 0\n", planet);
        printf("Mission failed. Fuel exhausted before reaching all planets.\n");
        return 0;
    }

    if (planet > totalPlanets) {
        printf("Mission accomplished! All planets visited.\n");
        return 1;
    }

    int remainingFuel = fuel;

    remainingFuel -= consumption;

    remainingFuel += recharge;

    if ((planet - 1) % 4 == 0 && planet > 1) {
        remainingFuel += solarBonus;
    } else if (planet == 1) {
         remainingFuel = remainingFuel;
    }

    if (remainingFuel < 0) {
        remainingFuel = 0;
    }

    printf("Planet %d: Fuel Remaining = %d\n", planet, remainingFuel);

    return calculateFuel(remainingFuel, consumption, recharge, solarBonus, planet + 1, totalPlanets);
}

int main() {
    int initialFuel = 100;
    int consumption = 20;
    int recharge = 5;
    int solarBonus = 15;
    int totalPlanets = 10;

    printf("Spacecraft Fuel Tracker\n");
    printf("Initial Fuel: %d\n", initialFuel);
    printf("Consumption per stop: %d\n", consumption);
    printf("Recharge per gravitational zone: %d\n", recharge);
    printf("Solar Bonus (every 4th stop): %d\n", solarBonus);
    printf("Total Planets: %d\n\n", totalPlanets);

    calculateFuel(initialFuel, consumption, recharge, solarBonus, 1, totalPlanets);

    return 0;
}
